<!---
	The default skin class for a Spark SkinnableContainer container.  

	@see spark.components.SkinnableContainer
	
	@langversion 3.0
	@playerversion Flash 10
	@playerversion AIR 1.5
	@productversion Flex 4
-->

<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s ="library://ns.adobe.com/flex/spark" 
		xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
		alpha.disabled="0.5" height="55">
	
	<fx:Metadata>
		<![CDATA[
			[HostComponent("com.winonetech.components.PageSlider")]
		]]>
	</fx:Metadata>
	
	<fx:Script fb:purpose="styling">
		<![CDATA[
			
		]]>
	</fx:Script>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>
	
	<s:Group left="0" right="0" top="0" bottom="0">
		
		<s:layout>
			<s:HorizontalLayout horizontalAlign="center" verticalAlign="middle" gap="20"/>
		</s:layout>
		
		<s:Button id="prevButton" skinClass="multipublish.skins.PageSliderPrevButton">
			<s:filters>
				<s:DropShadowFilter distance="2"/>
			</s:filters>
		</s:Button>
		
		<s:HSlider id="valueSlider" width="100%" skinClass="multipublish.skins.PageSliderSliderSkin"/>
		
		<s:Button id="nextButton" skinClass="multipublish.skins.PageSliderNextButton">
			<s:filters>
				<s:DropShadowFilter distance="2"/>
			</s:filters>
		</s:Button>
		
	</s:Group>
	
</s:Skin>
